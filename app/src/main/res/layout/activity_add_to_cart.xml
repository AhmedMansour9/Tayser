<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    tools:context=".Activities.AddToCart">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/addtocart"
        android:textSize="@dimen/_14sdp"
        android:textColor="#000000"
        android:id="@+id/add"
        android:layout_marginTop="@dimen/_30sdp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="1"
        android:textSize="@dimen/_16sdp"
        android:id="@+id/T_Quantity"
        android:layout_below="@+id/add"
        android:textColor="#4d4949"
        android:layout_marginTop="@dimen/_40sdp"

        />
   <ImageView
       android:layout_width="@dimen/_30sdp"
       android:layout_below="@+id/add"
       android:src="@drawable/ic_minus"
       android:id="@+id/Img_Minus"
       android:layout_marginStart="@dimen/_25sdp"
       android:layout_toEndOf="@+id/T_Quantity"
       android:layout_marginTop="@dimen/_35sdp"
       android:layout_height="@dimen/_30sdp"/>

    <ImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_below="@+id/add"
        android:src="@drawable/ic_plus"
        android:id="@+id/Img_Plus"
        android:layout_marginEnd="@dimen/_25sdp"
        android:layout_toStartOf="@+id/T_Quantity"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_height="@dimen/_30sdp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textSize="@dimen/_14sdp"
        android:layout_below="@+id/T_Quantity"
        android:id="@+id/T_Total"
        android:layout_marginTop="@dimen/_30sdp"
        />

    <Button
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_32sdp"
        android:layout_below="@+id/T_Total"
        android:layout_centerHorizontal="true"
        android:text="@string/confirm"
        android:layout_marginBottom="@dimen/_25sdp"
        android:textAllCaps="false"
        android:id="@+id/Btn_AddToCart"
        android:textColor="#fff"
        android:background="@drawable/bc_buttonlogin"
        android:layout_marginTop="@dimen/_35sdp"
    />

    <ProgressBar
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_centerInParent="true"
        android:id="@+id/prograss_cart"
        android:visibility="gone"
        />
</RelativeLayout>